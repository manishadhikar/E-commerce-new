@model List<Product>
<h1>Products</h1>
<table class="table table-boardered text-centre">
	<thead class="text-dark">
		<tr>
			<td>S.No.</td>
			<td>Product Name</td>
			<td>Price</td>
			<td>Quantity</td>
			<td>Rating</td>
			<td>Action</td>
		</tr>

	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
			<td>@obj.ID</td>
			<td>@obj.Title</td>
			<td>
				<div class="btn-group">
					<a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@obj.ID"><button class="btn btn-warning">Update</button></a>
					<a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@obj.ID"><button class="btn btn-danger">Delete</button></a>
				</div>
			</td>
			</tr>
		}
	</tbody>
</table>