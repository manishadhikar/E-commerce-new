@model Product
<h1>Add New Product</h1>
<div asp-validation-summary="All"></div>

<form method="post" class="w-50 m-5 p-5 shadow-lg">
	<input type="hidden" asp-for="Rating" value="1" />
	<label asp-for="Title"></label>
	<div class="d-flex">
	<input type="text" asp-for="Title" class="form-control"/>
	<span asp-validation-for="Title"></span>
	</div>
	<button class="btn btn-warning">Submit</button>


	label asp-for="Price"></label>
	<div class="d-flex">
		<input type="text" asp-for="Price" class="form-control" />
		<span asp-validation-for="Price"></span>



		label asp-for="Description"></label>
		<div class="d-flex">
			<textarea asp-for="Description" class="form-control" style="resize:none"></textarea>/>
			<span asp-validation-for="Description"></span>


			label asp-for="Count_In_Stock"></label>
			<div class="d-flex">
				<input type="text" asp-for="Count_In_Stock" class="form-control" />
				<span asp-validation-for="Count_In_Stock"></span>



</form>